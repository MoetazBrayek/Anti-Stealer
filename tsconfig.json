{
    "compilerOptions": {
        "module": "ES2022",
        "esModuleInterop": true,
        "target": "es2022",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        // Tell ts-node CLI to install the --loader automatically
        "esm": true
    }
}